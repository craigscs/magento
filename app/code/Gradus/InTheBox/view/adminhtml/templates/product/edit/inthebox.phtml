<script>
    var $q = jQuery.noConflict();
    $q( document ).ready(function() {
        $q('#InTheBox_table > tbody').sortable({
            handle: '.draggable-handle',
            revert: 300,
            placeholder: "ui-state-in_the_box myHover",
            tolerance: "intersect",
        }).disableSelection();
    });
    function addinthebox()
    {
        var counts = $q('#InTheBox_table > tbody > tr').length;
        var clb = counts+1;
        q = '<tr id="inthebox_row_'+clb+'">'+
            '<td class="data-grid-draggable-row-cell">'+
            '<div class="draggable-handle_inthebox"></div></td>'+
            '<td class="posrow">'+clb+'</td><td>'+
            '<input class="admin__control-text" name="inthebox['+clb+'][name]" data-form-part="product_form" id="inthebox[' + clb + '][count]" style="width:100%;" value="" /></td>'+
            '<td><textarea name="inthebox['+clb+'][value]" data-form-part="product_form" style="width:100%;"></textarea></td>'+
            '</td><td><a href"#" onclick="deleteinthebox(\'inthebox_row_'+clb+'\')"><img src="<?= $this->getViewFileUrl('Gradus_Catalog::images/trash.png'); ?>" style="width:20px"></a></td></tr>';
        $q('#InTheBox_table > tbody').append(q);
    }

    function deleteinthebox(h)
    {
        $q('#'+h).remove();
    }

    function copyinthebox()
    {
        var theid = $q('#copy_from_inthebox').val();
        $q.ajax({
            url: 'http://'+window.location.hostname+"/admin/catalog/product/copy/id/"+theid+"/field/inthebox/",
            data: {form_key: window.FORM_KEY},
            context: document.body
        }).done(function(res) {
            var q = res.res;
            $q('#InTheBox_container').html(q);
            updateaccord();
            updateaccord();
        });
    }
</script>