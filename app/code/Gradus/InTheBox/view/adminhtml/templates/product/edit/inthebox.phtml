    </select>
    <button class="action-secondary" onclick="copyinthebox()">Use template</button>
</div>

<script>
    var $q = jQuery.noConflict();

    function copyinthebox()
    {
        var theid = $q('#copy_from_inthebox').val();
        $q.ajax({
            url: 'http://'+window.location.hostname+"/admin/catalog/product/copy/id/"+theid+"/field/inthebox/",
            data: {form_key: window.FORM_KEY},
            context: document.body
        }).done(function(res) {
            var q = res.res;
            $q('#in_the_box_container').html(q);
        });
    }

    $q( document ).ready(function() {
        $q('#in_the_box_container').sortable({
            handle: '.draggable-handle',
            revert: 300,
            placeholder: "ui-state-in_the_box myHover",
            tolerance: "intersect",
        }).disableSelection();
    });
    function addinthebox()
    {
        var counts = $q('#in_the_box_container .draggable-handle').length;
        var clb = counts+1;
        var q = '';
        q += '<div style="margin:auto" class="gradus_fields" id="in_the_box_'+clb+'">';
        q += ' <div class="draggable-handle"><b>'+clb+'</b></div>';
        q += '<label class="gradus_label" for="in_the_box_amonut_'+clb+'">Amount</label>';
        q += '<input class="gradus_text_mini" id="in_the_box_amonut_'+clb+'" value="" />';
        q += '<label class="gradus_label" for="in_the_box_value_'+clb+'">Item</label>';
        q += '<input class="gradus_text_medium" style="width:70%" id="in_the_box_value_'+clb+'" value="" />';
        q += '<a src="javascript:void(0)" onclick="deleteinthebox(\'in_the_box_'+clb+'\')">';
        q += '<img style="width:20px;" src="<?= $this->getViewFileUrl('Gradus_Catalog::images/trash.png') ?>"></a></div>';
        $q('#in_the_box_container').append
        (q);
    }

    function deleteinthebox(h)
    {
        $q('#'+h).remove();
    }
</script>