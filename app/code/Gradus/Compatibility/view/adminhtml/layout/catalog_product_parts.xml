<?xml version="1.0"?>

<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/layout_generic.xsd">
    <container name="root" label="Root">
        <block class="Gradus\Compatibility\Block\Adminhtml\Catalog\Product\Edit\Tab\Parts"
               name="catalog.product.edit.tab.parts"/>
        <block class="Magento\Backend\Block\Widget\Grid\Serializer" name="parts_grid_serializer">
            <arguments>
                <argument name="input_names" xsi:type="string">position</argument>
                <argument name="grid_block" xsi:type="string">catalog.product.edit.tab.parts</argument>
                <argument name="callback" xsi:type="string">getSelectedPartsProducts</argument>
                <argument name="input_element_name" xsi:type="string">links[parts]</argument>
                <argument name="reload_param_name" xsi:type="string">products_parts</argument>
            </arguments>
        </block>
    </container>
</layout>
